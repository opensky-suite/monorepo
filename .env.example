# .env.example
# Copy this file to .env and fill in your local development secrets
# This file is committed to git as a template
# The actual .env file is git-ignored

# Node Environment
NODE_ENV=development

# Local Database (matches docker-compose.yml)
DATABASE_URL=postgresql://opensky:dev_password_change_in_production@localhost:5432/opensky_dev
REDIS_URL=redis://localhost:6379

# Local Ports
PORT=3000
API_PORT=4000

# Auth (local development)
JWT_SECRET=your-local-jwt-secret-change-in-production
SESSION_SECRET=your-local-session-secret-change-in-production

# OAuth (local development - register dev apps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Storage (MinIO for local S3 simulation)
STORAGE_PROVIDER=s3
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=opensky-dev
S3_REGION=us-east-1
S3_ACCESS_KEY=opensky
S3_SECRET_KEY=dev_password_change_in_production
S3_FORCE_PATH_STYLE=true
# For local file storage instead:
# STORAGE_PROVIDER=local
# STORAGE_PATH=./storage

# Email (local development - use Mailhog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@opensky.local

# WebRTC (for SkyMeet - local Coturn server)
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=opensky
TURN_SERVER_PASSWORD=dev_turn_password
TURN_SERVER_REALM=opensky.local
# STUN server (public, no auth needed)
STUN_SERVER_URL=stun:stun.l.google.com:19302

# LLM APIs (for SkyMind - optional in development)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_HOST=http://localhost:11434

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SEARCH_INDEXING=false

# Monitoring (optional in development)
SENTRY_DSN=
LOG_LEVEL=debug

# Docker Compose Services
POSTGRES_USER=opensky
POSTGRES_PASSWORD=dev_password_change_in_production
POSTGRES_DB=opensky_dev
MINIO_ROOT_USER=opensky
MINIO_ROOT_PASSWORD=dev_password_change_in_production
ELASTICSEARCH_HOST=http://localhost:9200
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
