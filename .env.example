# .env.example
# Copy this file to .env and fill in your local development secrets
# This file is committed to git as a template
# The actual .env file is git-ignored

# Node Environment
NODE_ENV=development

# Local Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/opensky_dev
REDIS_URL=redis://localhost:6379

# Local Ports
PORT=3000
API_PORT=4000

# Auth (local development)
JWT_SECRET=your-local-jwt-secret-change-in-production
SESSION_SECRET=your-local-session-secret-change-in-production

# OAuth (local development - register dev apps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Storage (local/S3 compatible)
STORAGE_PROVIDER=local
STORAGE_PATH=./storage
# For S3-compatible storage:
# STORAGE_PROVIDER=s3
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Email (local development - use Mailhog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@opensky.local

# WebRTC (for SkyMeet)
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_PASSWORD=

# LLM APIs (for SkyMind - optional in development)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_HOST=http://localhost:11434

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SEARCH_INDEXING=false

# Monitoring (optional in development)
SENTRY_DSN=
LOG_LEVEL=debug

# Docker Compose Services
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=opensky_dev
